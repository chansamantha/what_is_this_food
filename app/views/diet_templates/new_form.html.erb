<!-- Form diet start -->
<form action="/create_diet" method="post">
<!-- Form diet end -->

  <!-- Label and input for food_id start -->
  <div class="form-group">
    <label for="food_id">
      Food
    </label>

    <!-- Input for food_id start -->
    <input type="text" id="food_id" name="food_id" class="form-control">
    <!-- Input for food_id end -->
  </div>
  <!-- Label and input for food_id end -->

  <!-- Label and input for diet_name start -->
  <div class="form-group">
    <label for="diet_name">
