    </label>

    <!-- Input for diet_name start -->
    <input type="text" id="diet_name" name="diet_name" class="form-control">
    <!-- Input for diet_name end -->
  </div>
  <!-- Label and input for diet_name end -->

  <button class="btn btn-block btn-outline-secondary">
    Create diet
  </button>
