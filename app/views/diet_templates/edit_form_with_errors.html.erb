<!-- Validation failure messages -->
<% if @diet.errors.any? %>
  <% @diet.errors.full_messages.each do |message| %>
    <div class="alert">
      <%= message %>
    </div>
  <% end %>
<% end %>

<h1>
  Edit diet #<%= @diet.id %>
</h1>

<hr>

<!-- Form diet start -->
<form action="/update_diet/<%= @diet.id %>" method="post">
<!-- Form diet end -->

  <!-- Label and input for food_id start -->
  <div class="form-group">
    <label for="food_id">
      Food
    </label>

    <!-- Input for food_id start -->
    <%= select_tag(:food_id, options_from_collection_for_select(Food.all, :id, :food_name, @diet.food_id), :class => "form-control") %>
    <!-- Input for food_id end -->
  </div>
  <!-- Label and input for food_id end -->

  <!-- Label and input for diet_name start -->
  <div class="form-group">
    <label for="diet_name">
      Diet name
    </label>

    <!-- Input for diet_name start -->
    <input type="text" id="diet_name" name="diet_name" class="form-control" value="<%= @diet.diet_name %>">
    <!-- Input for diet_name end -->
  </div>
  <!-- Label and input for diet_name end -->

  <button class="btn btn-block btn-outline-secondary">
    Update diet
  </button>
</form>

<hr>

<a href="/diets">
  Go back
</a>
