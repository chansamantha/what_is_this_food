<div class="row mb-3">
  <div class="col-md-12">
    <h1>
      All diets
    </h1>

    <a href="/diets/new" class="btn btn-block btn-outline-secondary">
      Add a new diet
    </a>
  </div>
</div>

<!-- Ransack Code start -->

<!-- Ransack Code end -->

<!-- Location Map Code start -->

<!-- Location Map Code end -->

<hr>

<div class="row mb-3">
  <div class="col-md-12">
    <table class="table">
      <tr>
        <th>
          ID
        </th>

        <th>
          Food
        </th>

        <th>
          Diet name
        </th>

        <th>
          Created at
        </th>

        <th>
          Updated at
        </th>

        <th>
        </th>
      </tr>

      <% @diets.each do |diet| %>
      <tr>
        <!-- Display diet.id start -->
        <td>
          <%= diet.id %>
        </td>
        <!-- Display diet.id end -->

        <!-- Display diet.food_id start -->
        <td>
          <%= diet.food.food_name %>
        </td>
        <!-- Display diet.food_id end -->

        <!-- Display diet.diet_name start -->
        <td>
          <%= diet.diet_name %>
        </td>
        <!-- Display diet.diet_name end -->

        <!-- Display diet.created_at start -->
        <td>
          <%= time_ago_in_words(diet.created_at) %> ago
        </td>
        <!-- Display diet.created_at end -->

        <!-- Display diet.updated_at start -->
        <td>
          <%= time_ago_in_words(diet.updated_at) %> ago
        </td>
        <!-- Display diet.updated_at end -->

        <td>
          <a href="/diets/<%= diet.id %>">
            Show details
          </a>
        </td>
      </tr>
      <% end %>
    </table>

    <div class="row mb-3">
      <div class="col-md-12">
        <%= paginate @diets, theme: "twitter-bootstrap-4" %>
      </div>
    </div>

  </div>
</div>
