<div class="row mb-3">
  <div class="col-md-12">
    <h1>
      All foods
    </h1>

    <a href="/foods/new" class="btn btn-block btn-outline-secondary">
      Add a new food
    </a>
  </div>
</div>

<!-- Ransack Code start -->
<div class="row">
  <div class="col-md-12 mb-3">
    <%= render partial: "food_templates/foods_search_form" %>
  </div>
</div>
<!-- Ransack Code end -->

<!-- Location Map Code start -->

<!-- Location Map Code end -->

<hr>

<div class="row mb-3">
  <div class="col-md-12">
    <table class="table">
      <tr>
        <th>
          ID
        </th>

        <th>
          Food name
        </th>

        <th>
          Created at
        </th>

        <th>
          Updated at
        </th>

        <th>
        </th>
      </tr>

      <% @foods.each do |food| %>
      <tr>
        <!-- Display food.id start -->
        <td>
          <%= food.id %>
        </td>
        <!-- Display food.id end -->

        <!-- Display food.food_name start -->
        <td>
          <%= food.food_name %>
        </td>
        <!-- Display food.food_name end -->

        <!-- Display food.created_at start -->
        <td>
          <%= time_ago_in_words(food.created_at) %> ago
        </td>
        <!-- Display food.created_at end -->

        <!-- Display food.updated_at start -->
        <td>
          <%= time_ago_in_words(food.updated_at) %> ago
        </td>
        <!-- Display food.updated_at end -->

        <td>
          <a href="/foods/<%= food.id %>">
            Show details
          </a>
        </td>
      </tr>
      <% end %>
    </table>

    <div class="row mb-3">
      <div class="col-md-12">
        <%= paginate @foods, theme: "twitter-bootstrap-4" %>
      </div>
    </div>

  </div>
</div>
