<%= search_form_for @q, :class => collapse_search_form, :id => "foods_filters" do |f| %>
  <p class="lead">Narrow results:</p>

  <div class="form-group">
    <%= f.label :food_name_cont, "Food name contains" %>
    <%= f.text_field :food_name_cont, :class => "form-control", :placeholder => "Food name contains" %>
  </div>

  <div class="form-group">
    <%= f.label :created_at, "Created at" %>
    <div class="row">
      <div class='col-md-6 mb-1'>
        <div class='input-group date' id='created_atgteqPicker' data-target-input="nearest">
          <%= f.text_field :created_at_gteq, :class => "form-control datetimepicker-input", :placeholder => "Created at greater than or equal to", :data => {:target => '#created_atgteqPicker'} %>
          <div class="input-group-append" data-target='#created_atgteqPicker' data-toggle="datetimepicker">
            <div class="input-group-text"><i class="fa fa-calendar"></i></div>
          </div>
        </div>
      </div>

      <div class='col-md-6'>
        <div class='input-group date' id='created_atlteqPicker' data-target-input="nearest">
          <%= f.text_field :created_at_lteq, :class => "form-control datetimepicker-input", :placeholder => "Created at less than or equal to", :data => {:target => '#created_atlteqPicker'} %>
          <div class="input-group-append" data-target='#created_atlteqPicker' data-toggle="datetimepicker">
            <div class="input-group-text"><i class="fa fa-calendar"></i></div>
          </div>
        </div>
      </div>
    </div>
  </div>
  <script type="text/javascript">
      $(function () {
          $('#created_atgteqPicker').datetimepicker({
              format: 'YYYY-MM-DD hh:mm:SS'
          });
          $('#created_atlteqPicker').datetimepicker({
              useCurrent: false,
              format: 'YYYY-MM-DD hh:mm:SS'
          });
          $('#created_atgteqPicker').on("dp.change", function (e) {
              $('#created_atlteqPicker').data("DateTimePicker").minDate(e.date);
          });
          $('#created_atlteqPicker').on("dp.change", function (e) {
              $('#created_atgteqPicker').data("DateTimePicker").maxDate(e.date);
          });
      });
  </script>


  <div class="form-group">
    <%= f.label :created_at, "Diet Created at" %>
    <div class="row">
      <div class='col-md-6 mb-1'>
        <div class='input-group date' id='dietsgteqcreated_atPicker' data-target-input="nearest">
          <%= f.text_field :diets_created_at_gteq, :class => "form-control datetimepicker-input", :placeholder => "Diet Created at greater than or equal to", :data => {:target => '#dietsgteqcreated_atPicker'} %>
          <div class="input-group-append" data-target='#dietsgteqcreated_atPicker' data-toggle="datetimepicker">
            <div class="input-group-text"><i class="fa fa-calendar"></i></div>
          </div>
        </div>
      </div>

      <div class='col-md-6'>
        <div class='input-group date' id='dietslteqcreated_atPicker' data-target-input="nearest">
          <%= f.text_field :diets_created_at_lteq, :class => "form-control datetimepicker-input", :placeholder => "Diet Created at less than or equal to", :data => {:target => '#dietslteqcreated_atPicker'} %>
          <div class="input-group-append" data-target='#dietslteqcreated_atPicker' data-toggle="datetimepicker">
            <div class="input-group-text"><i class="fa fa-calendar"></i></div>
          </div>
        </div>
      </div>
    </div>
  </div>
  <script type="text/javascript">
      $(function () {
          $('#dietsgteqcreated_atPicker').datetimepicker({
              format: 'YYYY-MM-DD hh:mm:SS'
          });
          $('#dietslteqcreated_atPicker').datetimepicker({
              useCurrent: false,
              format: 'YYYY-MM-DD hh:mm:SS'
          });
          $('#dietsgteqcreated_atPicker').on("dp.change", function (e) {
              $('#dietslteqcreated_atPicker').data("DateTimePicker").minDate(e.date);
          });
          $('#dietslteqcreated_atPicker').on("dp.change", function (e) {
              $('#dietsgteqcreated_atPicker').data("DateTimePicker").maxDate(e.date);
          });
      });
  </script>

  <div class="form-group">
    <%= f.label :food_id, "FoodDiet Food" %>
    <div class="row">
      <div class='col-md-6 mb-1'>
        <%= f.text_field :food_diets_food_id_gteq, :class => "form-control", :placeholder => "FoodDiet Food greater than or equal to" %>
      </div>
      <div class='col-md-6'>
        <%= f.text_field :food_diets_food_id_lteq, :class => "form-control", :placeholder => "FoodDiet Food less than or equal to" %>
      </div>
    </div>
  </div>


  <%= f.submit :class => "btn btn-primary btn-block mb-1" %>

  <a href="/foods" class="btn btn-outline-secondary btn-block mb-1">Clear filters</a>

<% end %>

<a class="btn btn-outline-secondary btn-block mb-1" data-toggle="collapse" href="#foods_filters">
  Show filters
</a>
