<h1>
  Edit food #<%= @food.id %>
</h1>

<hr>

<form action="/update_food/<%= @food.id %>" method="post">

  <div class="form-group">
    <label for="food_name">
      Food name
    </label>

    <input type="text" id="food_name" name="food_name" class="form-control" value="<%= @food.food_name %>">
  </div>

  <button class="btn btn-block btn-outline-secondary">
    Update food
  </button>
</form>

<hr>

<a href="/foods">
  Go back
</a>
