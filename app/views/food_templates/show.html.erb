<div class="row mb-3">
  <div class="col-md-8 offset-md-2">
    <h1>
      Food #<%= @food.id %> details
    </h1>

    <div class="row mb-3">
      <div class="col">
        <a href="/foods" class="btn btn-block btn-outline-secondary">
          Go back
        </a>
      </div>

      <!-- Edit link food start -->
      <div class="col">
        <a href="/foods/<%= @food.id %>/edit" class="btn btn-block btn-outline-secondary">
          Edit food
        </a>
      </div>
      <!-- Edit link food end -->

      <!-- Delete link food start -->
      <div class="col">
        <a href="/delete_food/<%= @food.id %>" class="btn btn-block btn-outline-secondary">
          Delete food
        </a>
      </div>
      <!-- Delete link food end -->
    </div>

    <dl>
      <dt>
        Food name
      </dt>
      <!-- Display food_name start -->
      <dd>
        <%= @food.food_name %>
      </dd>
      <!-- Display food_name end -->

      <dt>
        Created at
      </dt>
      <!-- Display created_at start -->
      <dd>
        <%= time_ago_in_words(@food.created_at) %> ago
      </dd>
      <!-- Display created_at end -->

      <dt>
        Updated at
      </dt>
      <!-- Display updated_at start -->
      <dd>
        <%= time_ago_in_words(@food.updated_at) %> ago
      </dd>
      <!-- Display updated_at end -->
    </dl>
  </div>
</div>

<!-- Show Page Customization starts -->
<div class="row mb-3">
  <div class="col-md-8 offset-md-2">
    <%= render partial: "food_templates/food_diets" %>
  </div>
</div>

<div class="row mb-3">
  <div class="col-md-8 offset-md-2">
    <%= render partial: "food_templates/food_food_diets" %>
  </div>
</div>
<!-- Show Page Customization end -->
