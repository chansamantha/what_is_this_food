<%= search_form_for @q, :class => collapse_search_form, :id => "food_diets_filters" do |f| %>
  <p class="lead">Narrow results:</p>

  <div class="form-group">
    <%= f.label :food_id, "Food" %>
    <div class="row">
      <div class='col-md-6 mb-1'>
        <%= f.text_field :food_id_gteq, :class => "form-control", :placeholder => "Food greater than or equal to" %>
      </div>
      <div class='col-md-6'>
        <%= f.text_field :food_id_lteq, :class => "form-control", :placeholder => "Food less than or equal to" %>
      </div>
    </div>
  </div>

  <div class="form-group">
    <%= f.label :compliant_eq, "Compliant" %>
    <div>
      <label class="radio-inline">
        <%= f.radio_button :compliant_eq, "1", checked: ((params[:q] && params[:q][:compliant_eq]) == "1" ? "checked" : "") %> Yes
      </label>
      <label class="radio-inline">
        <%= f.radio_button :compliant_eq, "0", checked: ((params[:q] && params[:q][:compliant_eq]) == "0" ? "checked" : "")%> No
      </label>
      <label class="radio-inline">
        <%= f.radio_button :compliant_eq, ""%> Either
      </label>
    </div>
  </div>

  <div class="form-group">
    <%= f.label :created_at, "Created at" %>
    <div class="row">
      <div class='col-md-6 mb-1'>
        <div class='input-group date' id='created_atgteqPicker' data-target-input="nearest">
          <%= f.text_field :created_at_gteq, :class => "form-control datetimepicker-input", :placeholder => "Created at greater than or equal to", :data => {:target => '#created_atgteqPicker'} %>
          <div class="input-group-append" data-target='#created_atgteqPicker' data-toggle="datetimepicker">
            <div class="input-group-text"><i class="fa fa-calendar"></i></div>
          </div>
        </div>
      </div>

      <div class='col-md-6'>
        <div class='input-group date' id='created_atlteqPicker' data-target-input="nearest">
          <%= f.text_field :created_at_lteq, :class => "form-control datetimepicker-input", :placeholder => "Created at less than or equal to", :data => {:target => '#created_atlteqPicker'} %>
          <div class="input-group-append" data-target='#created_atlteqPicker' data-toggle="datetimepicker">
            <div class="input-group-text"><i class="fa fa-calendar"></i></div>
          </div>
        </div>
      </div>
    </div>
  </div>
  <script type="text/javascript">
      $(function () {
          $('#created_atgteqPicker').datetimepicker({
              format: 'YYYY-MM-DD hh:mm:SS'
          });
          $('#created_atlteqPicker').datetimepicker({
              useCurrent: false,
              format: 'YYYY-MM-DD hh:mm:SS'
          });
          $('#created_atgteqPicker').on("dp.change", function (e) {
              $('#created_atlteqPicker').data("DateTimePicker").minDate(e.date);
          });
          $('#created_atlteqPicker').on("dp.change", function (e) {
              $('#created_atgteqPicker').data("DateTimePicker").maxDate(e.date);
          });
      });
  </script>


  <div class="form-group">
    <%= f.label :created_at, "Diet Created at" %>
    <div class="row">
      <div class='col-md-6 mb-1'>
        <div class='input-group date' id='dietgteqcreated_atPicker' data-target-input="nearest">
          <%= f.text_field :diet_created_at_gteq, :class => "form-control datetimepicker-input", :placeholder => "Diet Created at greater than or equal to", :data => {:target => '#dietgteqcreated_atPicker'} %>
          <div class="input-group-append" data-target='#dietgteqcreated_atPicker' data-toggle="datetimepicker">
            <div class="input-group-text"><i class="fa fa-calendar"></i></div>
          </div>
        </div>
      </div>

      <div class='col-md-6'>
        <div class='input-group date' id='dietlteqcreated_atPicker' data-target-input="nearest">
          <%= f.text_field :diet_created_at_lteq, :class => "form-control datetimepicker-input", :placeholder => "Diet Created at less than or equal to", :data => {:target => '#dietlteqcreated_atPicker'} %>
          <div class="input-group-append" data-target='#dietlteqcreated_atPicker' data-toggle="datetimepicker">
            <div class="input-group-text"><i class="fa fa-calendar"></i></div>
          </div>
        </div>
      </div>
    </div>
  </div>
  <script type="text/javascript">
      $(function () {
          $('#dietgteqcreated_atPicker').datetimepicker({
              format: 'YYYY-MM-DD hh:mm:SS'
          });
          $('#dietlteqcreated_atPicker').datetimepicker({
              useCurrent: false,
              format: 'YYYY-MM-DD hh:mm:SS'
          });
          $('#dietgteqcreated_atPicker').on("dp.change", function (e) {
              $('#dietlteqcreated_atPicker').data("DateTimePicker").minDate(e.date);
          });
          $('#dietlteqcreated_atPicker').on("dp.change", function (e) {
              $('#dietgteqcreated_atPicker').data("DateTimePicker").maxDate(e.date);
          });
      });
  </script>

  <div class="form-group">
    <%= f.label :food_food_name_cont, "Food food_name contains" %>
    <%= f.text_field :food_food_name_cont, :class => "form-control", :placeholder => "Food food_name contains" %>
  </div>


  <%= f.submit :class => "btn btn-primary btn-block mb-1" %>

  <a href="/food_diets" class="btn btn-outline-secondary btn-block mb-1">Clear filters</a>

<% end %>

<a class="btn btn-outline-secondary btn-block mb-1" data-toggle="collapse" href="#food_diets_filters">
  Show filters
</a>
