<h1>
  Edit food diet #<%= @food_diet.id %>
</h1>

<hr>

<form action="/update_food_diet/<%= @food_diet.id %>" method="post">

  <div class="form-group">
    <label for="food_id">
      Food
    </label>

    <input type="text" id="food_id" name="food_id" class="form-control" value="<%= @food_diet.food_id %>">
  </div>

  <div class="form-group">
    <label for="diet_id">
      Diet
    </label>

    <%= select_tag(:diet_id, options_from_collection_for_select(Diet.all, :id, :created_at, @food_diet.diet_id), :class => "form-control") %>
  </div>

  <div class="form-check">
    <input type="hidden" value="0" name="compliant">
    <input id="compliant" class="form-check-input" name="compliant" type="checkbox" value="1" <%= "checked" if @food_diet.compliant %>>
    <label for="compliant" class="form-check-label">
      Compliant
    </label>
  </div>

  <button class="btn btn-block btn-outline-secondary">
    Update food diet
  </button>
</form>

<hr>

<a href="/food_diets">
  Go back
</a>
